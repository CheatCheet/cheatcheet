<div class="post">
  <h2><%= link_to post.title, post_path(post), target: '_top' %></h2>
  <p class='meta'><em><%= created_at_date(post) %> - <%= post.stack.name %></em></p>
  <div class='content'>
    <%= post.body %>
  </div>
  <%= turbo_frame_tag "bookmark_options_for_post_#{post.id}" do %>
    <%= render 'bookmarks/bookmark_options', post: post, user: current_user %>
  <% end %>
</div>
