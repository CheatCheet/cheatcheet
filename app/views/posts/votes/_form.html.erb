<%= form_with url: post_votes_path(post), scope: :post do |f| %>
  <%= f.hidden_field :vote, value: label %>
  <%= button_tag type: 'submit', disabled: disable  do %>
    <% if label == '+' %>
      <i class="fas fa-caret-up"></i>
    <% else %>
      <i class="fas fa-caret-down"></i>
    <% end %>
  <% end %>
<% end %>
