<% if user_signed_in? %>
  <%= button_to post_votes_path(post, post: { vote: label }), method: :post, disabled: disable do %>
    <% if label == 'up' %>
      <i class="fas fa-caret-up"></i>
    <% else %>
      <i class="fas fa-caret-down"></i>
    <% end %>
  <% end %>
<% else %>
  <%= button_to new_user_session_path, method: :get do %>
    <% if label == 'up' %>
      <i class="fas fa-caret-up"></i>
    <% else %>
      <i class="fas fa-caret-down"></i>
    <% end %>
  <% end %>
<% end %>
