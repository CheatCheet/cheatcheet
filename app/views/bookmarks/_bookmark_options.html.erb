<% bookmark_id = post.bookmarked_by?(user) %>
<% if bookmark_id %>
  <%= button_to bookmark_path(bookmark_id), method: :delete, class: 'btn-bookmarked' do %>
    <i class="fas fa-bookmark"></i>
  <% end %>
<% else %>
  <%= button_to post_bookmarks_path(post), method: :post, class: 'btn-bookmark' do %>
    <i class="far fa-bookmark"></i>
  <% end %>
<% end %>
